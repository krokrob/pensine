<div class="d-flex align-items-center" style="min-height: 100vh;">
  <div class="container pt-2 pb-2">
    <h1 class="text-center">pensine</h1>
    <h2 class="text-center">
      <%= t '.subtitle', default: 'explore your memories' %>
    </h2>
    <div class="row justify-content-center">
      <div class="col-10">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <%= f.input :email, placeholder: 'albus@pensine.me' %>
          <%= f.input :password, placeholder: '********' %>
          <div class="form-group">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
          <div class="form-group d-flex justify-content-center">
            <%= f.submit 'Connect', class: "btn btn-primary" %>
          </div>
          <div>
            <%= link_to "Forgot your password?", new_password_path(:user) %>
          </div>
          <div>
            <%= link_to t('.sign_up', default: 'No account yet?'), new_registration_path(resource_name) %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
